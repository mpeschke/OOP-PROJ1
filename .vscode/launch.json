    "version": "0.2.0",
    "configurations": [
        {
            "name": "PokemonBLL-Unit-Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/PokemonBLL-Unit-Tests",
            "args": ["--log_level=message"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Pokemon Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Pokemon/Pokemon",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Pokemon help",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Pokemon/Pokemon",
            "args": ["help"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
